{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "*"]
    },
    "target": "ES2020",
    "module": "NodeNext",  // 或根据项目实际情况使用 NodeNext
    "moduleResolution": "NodeNext",  // 或 NodeNext
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true              // 关键！启用 ESM 支持
  },
  "include": ["src/**/*.ts", "src/main.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}